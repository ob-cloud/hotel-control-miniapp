.page-wrapper .header {
  padding: 0 30rpx;
  height: 190rpx;
  position: relative;
  background-color: #0b1730;
}

.page-wrapper .header:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -48rpx;
  z-index: -1;
  content: '';
  height: 50rpx;
  width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #0b1730;
}

.page-wrapper .header .text {
  flex: 1;
  margin-left: 35rpx;
}

.page-wrapper .header .text .title,
.page-wrapper .header .text .description {
  /* color: #ffffffad; */
  color: #868d95;
}

.page-wrapper .header .text .title {
  font-size: 60rpx;
  max-width: 470rpx;
}

.page-wrapper .header .text .description {
  float: right;
  font-size: 32rpx;
}

.page-wrapper .content {
  /* padding: 0 20rpx; */
}

.menu-list {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  margin-top: 48rpx;
}

.menu-list .item {
  float: left;
  width: 33.33333%;
  /* height: 187.5rpx; */
  height: 240rpx;
  /* border: 1px solid rgba(0, 0, 0, .15); */
  border-right: 1px solid rgba(0, 0, 0, .1);
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu-list .item .icon {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto 16rpx auto;
}

.menu-list .item .icon image {
  width: 100%;
  height: 100%;
}

.menu-list .item .txt {
  display: block;
  height: 24rpx;
  width: 100%;
  font-size: 24rpx;
  color: #333;
}